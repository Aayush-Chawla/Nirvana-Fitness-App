<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_schedule"
            app:tint="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Workout Schedule"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Tell us about your workout preferences so we can build your personalized schedule."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <!-- Workout Days Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Preferred Workout Days"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/colorPrimary" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/workout_days_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/monday_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday" />

            <com.google.android.material.chip.Chip
                android:id="@+id/tuesday_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday" />

            <com.google.android.material.chip.Chip
                android:id="@+id/wednesday_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday" />

            <com.google.android.material.chip.Chip
                android:id="@+id/thursday_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday" />

            <com.google.android.material.chip.Chip
                android:id="@+id/friday_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday" />

            <com.google.android.material.chip.Chip
                android:id="@+id/saturday_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturday" />

            <com.google.android.material.chip.Chip
                android:id="@+id/sunday_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Workout Time Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Preferred Workout Time"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/colorPrimary" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/workout_time_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/morning_chip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning" />

            <com.google.android.material.chip.Chip
                android:id="@+id/afternoon_chip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afternoon" />

            <com.google.android.material.chip.Chip
                android:id="@+id/evening_chip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Workout Duration Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How long do you prefer to workout?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/workout_duration_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rb_duration_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 minutes"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rb_duration_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30 minutes"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rb_duration_45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45 minutes"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rb_duration_60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="60 minutes"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rb_duration_90"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="90 minutes"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rb_duration_120"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="120 minutes"
                android:padding="12dp" />
        </RadioGroup>

        <!-- Workout Type Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Preferred Workout Types"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/colorPrimary" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/workout_type_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/cardio_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardio" />

            <com.google.android.material.chip.Chip
                android:id="@+id/strength_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strength Training" />

            <com.google.android.material.chip.Chip
                android:id="@+id/hiit_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIIT" />

            <com.google.android.material.chip.Chip
                android:id="@+id/yoga_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yoga" />

            <com.google.android.material.chip.Chip
                android:id="@+id/pilates_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilates" />

            <com.google.android.material.chip.Chip
                android:id="@+id/crossfit_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CrossFit" />

            <com.google.android.material.chip.Chip
                android:id="@+id/bodyweight_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bodyweight" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Equipment Access Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Available Equipment"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/colorPrimary" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/available_equipment_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/dumbbells_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dumbbells" />

            <com.google.android.material.chip.Chip
                android:id="@+id/barbell_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbell" />

            <com.google.android.material.chip.Chip
                android:id="@+id/kettlebells_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kettlebells" />

            <com.google.android.material.chip.Chip
                android:id="@+id/resistance_bands_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resistance Bands" />

            <com.google.android.material.chip.Chip
                android:id="@+id/treadmill_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treadmill" />

            <com.google.android.material.chip.Chip
                android:id="@+id/stationary_bike_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stationary Bike" />

            <com.google.android.material.chip.Chip
                android:id="@+id/none_chip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None (Bodyweight Only)" />
        </com.google.android.material.chip.ChipGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</ScrollView> 