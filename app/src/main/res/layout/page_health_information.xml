<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Health Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_health"
            android:contentDescription="Health Information" />

        <!-- Health Conditions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Conditions"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select any that apply to you"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupHealthConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Blood Pressure"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diabetes"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Cholesterol"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joint Pain"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back Pain"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asthma"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Condition"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Sleep Pattern -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Sleep Per Night"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/rgSleepPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbSleepLess6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Less than 6 hours"
                android:textColor="@color/black"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbSleep6to8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6-8 hours"
                android:textColor="@color/black"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbSleepMore8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More than 8 hours"
                android:textColor="@color/black"
                android:padding="12dp" />
        </RadioGroup>

        <!-- Water Intake -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Water Intake"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter amount"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etWaterIntake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="liters"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Stress Level -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stress Level"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <SeekBar
            android:id="@+id/seekbarStress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4"
            android:progress="2"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Low"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="start" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Moderate"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="High"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="end" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This information helps us tailor your fitness and wellness recommendations"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="16dp"
            android:gravity="center" />
    </LinearLayout>
</ScrollView> 