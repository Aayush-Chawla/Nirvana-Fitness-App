<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Diet Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_diet"
            android:contentDescription="Dietary Preferences" />

        <!-- Dietary Preferences -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dietary Preferences"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select all that apply to you"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupDiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetarian"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegan"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pescatarian"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gluten-Free"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lactose-Free"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keto"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paleo"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Carb"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Protein"
                app:chipBackgroundColor="@color/chip_background_color"
                android:checkable="true" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Meals Per Day -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meals Per Day"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/rgMealsPerDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbMeals2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 meals per day"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbMeals3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 meals per day"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbMeals4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 meals per day"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbMeals5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 meals per day"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rbMeals6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 meals per day"
                android:padding="12dp" />
        </RadioGroup>

        <!-- Meal Time Preferences -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred Meal Times"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breakfast"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinnerBreakfastTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/meal_times" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunch"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinnerLunchTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/meal_times" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinner"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/spinnerDinnerTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/meal_times" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We'll use this information to customize your meal plans and nutrition recommendations"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView> 